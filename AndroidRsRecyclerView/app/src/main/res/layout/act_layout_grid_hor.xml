<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="#EEAADD"
        android:gravity="center"
        android:text="no data"
        android:visibility="gone" />

    <com.threehalf.rsrecyclerview.refresh.RefreshRecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"
        app:rv_dividerHeight="1dp"
        app:rv_footerDividersEnabled="true"
        app:rv_headerDividersEnabled="true"
        app:rv_layoutManager="grid"
        app:rv_layoutManagerOrientation="horizontal"
        app:rv_spanCount="4" />

</RelativeLayout>
